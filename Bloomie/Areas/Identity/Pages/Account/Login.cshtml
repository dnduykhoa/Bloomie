@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập - Bloomie";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

<style>
    /* === General Styles === */
    body {
        font-family: 'Lora', serif;
        background: #ffffff; /* Changed to white */
        height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* === Main Container === */
    .login-page-container {
        display: flex;
        max-width: 900px;
        width: 100%;
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* === Left Section (Introduction) === */
    .intro-section {
        flex: 1;
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.4), rgba(255, 182, 193, 0.3)), url('https://images.unsplash.com/photo-1525310072745-f49212b5ac6d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center;
        background-size: cover;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        color: white;
    }

        .intro-section h2 {
            font-size: 2.2rem;
            font-weight: 600;
            margin-bottom: 15px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
        }

        .intro-section p {
            font-size: 1rem;
            opacity: 0.95;
        }

    /* === Right Section (Login Form) === */
    .login-section {
        flex: 1;
        padding: 40px;
        background: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-section h2 {
            font-size: 1.6rem;
            font-weight: 600;
            margin-bottom: 20px;
            color: #ff9999;
        }

    .form-floating input {
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        padding: 12px 15px;
        font-size: 0.9rem;
        background: #fffafa;
        transition: border-color 0.3s ease;
        font-family: 'Lora', serif;
    }

        .form-floating input:focus {
            border-color: #ffb6c1;
            box-shadow: none;
            background: white;
        }

    .form-floating label {
        padding-left: 15px;
        color: #777;
        font-size: 0.9rem;
        font-family: 'Lora', serif;
    }

    .form-check {
        margin: 15px 0;
    }

    .form-check-label {
        color: #666;
        font-size: 0.85rem;
        font-family: 'Lora', serif;
    }

    .btn-primary {
        background-color: #ffb6c1;
        border: none;
        border-radius: 30px;
        padding: 12px;
        font-size: 0.95rem;
        font-weight: 600;
        transition: background-color 0.3s ease;
        font-family: 'Lora', serif;
    }

        .btn-primary:hover {
            background-color: #ff8c99;
        }

    .text-center a {
        color: #ffb6c1;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.3s ease;
        font-family: 'Lora', serif;
    }

        .text-center a:hover {
            color: #ff8c99;
        }

    .text-center p {
        color: #666;
        font-size: 0.85rem;
        margin: 10px 0;
        font-family: 'Lora', serif;
    }

    .external-login-text {
        color: #666;
        font-size: 0.8rem;
        margin-top: 15px;
        font-family: 'Lora', serif;
    }

        .external-login-text a {
            color: #ffb6c1;
            text-decoration: none;
        }

            .external-login-text a:hover {
                color: #ff8c99;
            }

    /* External Login Buttons */
    .external-login-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        align-items: center;
    }

    .btn-external {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        .btn-external img {
            width: 30px;
            height: 30px;
        }

    .btn-google {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
    }

        .btn-google:hover {
            background-color: #f1f1f1;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    .btn-facebook {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
    }

        .btn-facebook:hover {
            background-color: #f1f1f1;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    .btn-telegram {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
    }

        .btn-telegram:hover {
            background-color: #f1f1f1;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }
</style>

<div class="login-page-container">
    <!-- Left Section: Introduction -->
    <div class="intro-section">
        <h2>Chào mừng đến với Bloomie</h2>
        <p>Đăng nhập để khám phá những bó hoa tuyệt đẹp và những món quà ý nghĩa từ Bloomie - nơi lan tỏa sắc màu thiên nhiên.</p>
    </div>

    <!-- Right Section: Login Form -->
    <div class="login-section">
        <h2 class="text-center">Đăng nhập vào Bloomie</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Mật khẩu</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3 text-start">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label">Ghi nhớ tôi?</label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-primary">Đăng nhập</button>
        </form>

        <div class="text-center mt-3">
            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Quên mật khẩu của bạn?</a>
        </div>

        <div class="text-center mt-2">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Đăng ký</a>
        </div>

        <div class="text-center mt-2">
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Gửi lại email xác nhận</a>
        </div>

        <div class="text-center mt-3">
            <p>Hoặc đăng nhập bằng</p>
            <div class="external-login-buttons">
                <!-- Google Button -->
                <a asp-page-handler="ExternalLogin" asp-route-provider="Google" asp-route-returnUrl="@Model.ReturnUrl" class="btn-external btn-google">
                    <img src="https://www.google.com/favicon.ico" alt="Google Logo">
                </a>
                <!-- Facebook Button -->
                <a asp-page-handler="ExternalLogin" asp-route-provider="Facebook" asp-route-returnUrl="@Model.ReturnUrl" class="btn-external btn-facebook">
                    <img src="https://www.facebook.com/favicon.ico" alt="Facebook Logo">
                </a>
                <!-- Telegram Button -->
                <a asp-page-handler="ExternalLogin" asp-route-provider="Telegram" asp-route-returnUrl="@Model.ReturnUrl" class="btn-external btn-telegram">
                    <img src="https://telegram.org/img/favicon.ico" alt="Telegram Logo">
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

